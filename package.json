{
  "name": "tunescout",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf .next",
    "dev": "pnpm clean && next dev --turbopack --hostname tunescout.local.com --port 3000 --experimental-https --experimental-https-key ./.certs/tunescout-local.com-key.pem --experimental-https-cert ./.certs/tunescout-local.com.pem",
    "dev:http": "next dev --port 3000",
    "build": "next build --turbopack",
    "start": "next start",
    "start:https": "NODE_ENV=production node ./server-https.mjs",
    "lint": "eslint",
    "test:unit": "vitest run --config vitest.config.ts --run",
    "test:integration": "vitest run --config vitest.integration.config.ts --run",
    "test": "pnpm test:unit && pnpm test:integration",
    "test:e2e": "playwright test",
    "test:all": "pnpm test && pnpm test:e2e"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "0.7.0",
    "clsx": "2.1.1",
    "lucide-react": "0.472.0",
    "next": "15.5.5",
    "next-auth": "5.0.0-beta.25",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/eslint-plugin-next": "^15.5.6",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "10.4.19",
    "eslint": "^9",
    "eslint-config-next": "15.5.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "jsdom": "^27.0.0",
    "next-test-api-route-handler": "^5.0.3",
    "postcss": "8.4.49",
    "tailwindcss": "3.4.15",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
